{
  "root": true,
  "overrides": [
    { "files": "*.js", "extends": "plugin:@superdispatch/node" },
    {
      "files": "*.ts",
      "extends": [
        "plugin:@superdispatch/node",
        "plugin:@superdispatch/typescript"
      ],
      "rules": {
        "node/no-missing-import": "off",
        "node/no-unsupported-features/es-syntax": "off"
      }
    },
    {
      "files": "**/{__tests__,__testutils__}/**/*.{js,ts}",
      "extends": "plugin:@superdispatch/jest",
      "rules": {
        "@typescript-eslint/no-explicit-any": "off"
      }
    },
    {
      "parserOptions": {
        "sourceType": "module"
      },
      "files": "**/__tests__/packages/**/*.js",
      "rules": {
        "strict": "off",
        "@superdispatch/directory-name": "off"
      }
    }
  ]
}
