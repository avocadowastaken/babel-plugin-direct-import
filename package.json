{
  "name": "babel-plugin-direct-import",
  "version": "0.3.0",
  "description": "Babel plugin to cherry pick imports of es6 modules.",
  "main": "src/index.js",
  "engines": {
    "node": ">=6.0.0"
  },
  "repository": "https://github.com/umidbekkarimov/babel-plugin-direct-import.git",
  "author": "Umidbek Karimov <uma.karimov@gmail.com>",
  "license": "MIT",
  "jest": {
    "coverageReporters": [
      "text-summary",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/__tests__/",
      "/node_modules/"
    ],
    "testMatch": [
      "**/src/**/*.spec.js"
    ]
  },
  "scripts": {
    "all": "yarn format && yarn lint && yarn cover",
    "test": "jest",
    "cover": "jest --coverage --no-cache",
    "codecov": "codecov -f ./coverage/lcov.info",
    "lint": "eslint \"{src,tools}/**/*.js\"",
    "format": "prettier --write \"{src,tools}/**/*.js\"",
    "report": "rimraf coverage && (yarn cover || opener ./coverage/lcov-report/index.html)"
  },
  "dependencies": {
    "babylon": "^6.18.0",
    "lodash": "^4.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "codecov": "^2.3.0",
    "eslint": "^4.5.0",
    "eslint-config-airbnb-base": "^12.0.2",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "fs-extra": "^4.0.1",
    "glob": "^7.1.2",
    "jest": "^21.2.1",
    "opener": "^1.4.3",
    "prettier": "^1.5.3",
    "rimraf": "^2.6.1"
  }
}
